{% extends "_layout" %}

{% set featureImage = {
  mode: 'crop',
  width: 500,
  height: 300,
  quality: 90
} %}


{% set eventsQuery = craft.entries()
    .section('event')
%}

{% set events = eventsQuery.all() %}


{% block content %}

<div clas="container">
    <div class="row mb-2">
        <div class="col-12">
            <h1 class="text-4xl text-black font-display my-4">{{ entry.title }}</h1>
        </div>
    </div>

    <div class="row mb-2">

        <div class="d-flex align-items-start flex-row">
            {% for event in events %}
            <div class="event me-3">
                {% if event.mainImage|length %}
                {% set image = event.mainImage.first() %}
                    <img src="{{ image.getUrl(featureImage) }}" alt="{{ image.title }}" />
                {% endif %}
                <h3><a href="{{ event.url }}">{{ event.title }}</a></h3>
            </div>
            {% endfor %}
        </div>

    </div>
</div>

{% endblock %}